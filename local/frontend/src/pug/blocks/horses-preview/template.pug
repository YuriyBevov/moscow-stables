      .swiper-controls
        button(type="button" aria-label="Назад").swiper-button.swiper-button-prev
          img(src="./assets/img/slider-arrow-left.png" alt="" width="60" height="40")
        button(type="button" aria-label="Вперед").swiper-button.swiper-button-next
          img(src="./assets/img/slider-arrow-right.png" alt="" width="60" height="40")







